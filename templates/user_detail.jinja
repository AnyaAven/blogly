{% extends 'base.jinja' %}

{% block title %} Edit {{ user_full_name }} {% endblock %}

{% block content %}

    <!-- Test comment for user_detail -->
    <div class="container">

        <div class="row">
            <div>
                <img src="{{ user_image }}" alt="{{ user_full_name }}'s profile picture" class="img-thumbnail">
                <h1 class="pt-4 mb-3 text-center">{{ user_full_name }}</h1>
            </div>

            <form > {# Here's a way to add a form method and action to a button to handle multiple routes #}
                <button
                class="btn btn-primary btn-lg w-100"
                formmethod="GET"
                formaction="/users/{{ user_id }}/edit">
                    Edit
                </button>

                <button
                class="btn btn-primary btn-lg w-100"
                formmethod="POST"
                formaction="/users/{{ user_id }}/delete">
                    Delete
                </button>
            </form>

        </div>

  </div>

{% endblock %}