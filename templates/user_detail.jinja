{% extends 'base.jinja' %}

{% block title %} Create a user {% endblock %}

{% block content %}

    <div class="container">

        <div class="row">

            <img src="{{ user_image }}" alt="{{ user_full_name }}'s profile picture" height="200" width="200">
            <h1 class="pt-4 mb-3 text-center">{{ user_full_name }}</h1>

            <a href="/users/{{ user_id }}/edit" class="btn btn-primary btn-lg w-100">
                Edit
            </a>

            {# FIXME: can an anchor tag be a post? We used submit to fix this. Does it work? #}
            <a href="/users/{{ user_id }}/delete" type="submit" class="btn btn-primary btn-lg w-100">
                Delete
            </a>
        </div>

  </div>

{% endblock %}