{% extends 'base.jinja' %}

{% block title %} Edit Post {% endblock %}

{% block content %}

    <!-- Test comment for post_detail -->
    <div class="container">

        <div class="row ">

            <div class="card border-primary mb-3" style="max-width: 20rem;">
                <div class="card-header">
                    <img src="{{ user.image_url }}" alt="{{ user.get_full_name() }}'s profile picture" class="img-thumbnail" width="80" height="80">
                    <p>By {{ user.get_full_name() }}</p>
                </div>
                <div class="card-body">
                    <h2 class="card-title">{{ post.title}}</h2>
                    <p class="card-text">{{ post.content }}</p>
                </div>
            </div>

            <form > {# Here's a way to add a form method and action to a button to handle multiple routes #}
                <button
                class="btn btn-primary btn-lg w-100"
                formmethod="GET"
                formaction="/posts/{{ post.id }}/edit">
                    Edit
                </button>

                <button
                class="btn btn-danger btn-lg w-100"
                formmethod="POST"
                formaction="/users/{{ user.id }}/delete">
                    Delete
                </button>
            </form>

        </div>

  </div>

{% endblock %}