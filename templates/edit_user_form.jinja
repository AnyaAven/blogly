{% extends 'base.jinja' %}

{% block title %} Create a user {% endblock %}

{% block content %}

  <h1 class="pt-4 mb-3 text-center">Edit a user</h1>

  <div class="ms-3 me-3">
    <form action="/results" class="pb-4"> {# FIXME: action #}

      <div class="mb-3 row">

        <label class="col-5 col-form-label text-end">First Name</label>
        <div class="col-7">
            <input
            name="{{first_name}}"
            required
            aria-label="{{first_name}}"
            class="form-control">

        </div>

         <label class="col-5 col-form-label text-end">Last Name</label>
        <div class="col-7">
            <input
            name="{{last_name}}"
            required
            aria-label="{{last_name}}"
            class="form-control">

        </div>

         <label class="col-5 col-form-label text-end">Image URL</label>
        <div class="col-7">
            <input
            name="{{image_url}}"
            aria-label="{{image_url}}"
            class="form-control">

        </div>

      </div>

        {# FIXME: This needs to be handled in two seperate ways #}
      <button class="btn btn-primary btn-lg w-100">
        Cancel {# redirect? #}
      </button>
      <button class="btn btn-primary btn-lg w-100">
        Save {# Updates db? #}
      </button>
    </form>
  </div>

{% endblock %}
