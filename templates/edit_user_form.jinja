{% extends 'base.jinja' %}

{% block title %} Create a user {% endblock %}

{% block content %}

    <!-- Test comment for edit_user_form -->
  <h1 class="pt-4 mb-3 text-center">Edit a user</h1>

  <div class="ms-3 me-3">
    <form action="/users/{{ user.id }}/edit" method="post" class="pb-4">

        {#Note: Can prepopulate the values using the user's current data #}
      <div class="mb-3 row">
        <label class="col-5 col-form-label text-end">First Name</label>
        <div class="col-7">
            <input
            name="first_name"
            aria-label="first_name"
            class="form-control"
            value="{{ user.first_name }}">

        </div>

         <label class="col-5 col-form-label text-end">Last Name</label>
        <div class="col-7">
            <input
            name="last_name"
            aria-label="last_name"
            class="form-control"
            value="{{ user.last_name }}">

        </div>

         <label class="col-5 col-form-label text-end">Image URL</label>
        <div class="col-7">
            <input
            name="image_url"
            aria-label="image_url"
            class="form-control"
            value="{{ user.image_name }}">

        </div>

      </div>


      <a href="/users" class="btn btn-primary btn-lg w-100">
        Cancel
      </a>
      <button class="btn btn-primary btn-lg w-100">
        Save
      </button>
    </form>
  </div>

{% endblock %}
