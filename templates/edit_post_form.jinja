{% extends 'base.jinja' %}

{% block title %} Add a Post {% endblock %}

{% block content %}

  <!-- Test comment for edit_post_form -->
  <h1 class="pt-4 mb-3 text-center">Edit a Post</h1>

  <div class="ms-3 me-3">
    <form action="/posts/{{ post.id }}/edit" method="POST" class="pb-4">

      <div class="mb-3 row">

        <label class="col-5 col-form-label text-end">Title</label>
        <div class="col-7">
            <input
            name="title"
            required
            aria-label="title"
            value="{{ post.title }}"
            class="form-control"> {# Aria-label -> alt for fields #}

        </div>

         <label class="col-5 col-form-label text-end">Post Content</label>
        <div class="col-7">
            <input
            name="content"
            required
            aria-label="content"
            value="{{ post.content }}"
            class="form-control">

        </div>

      </div>

      <a href="/users/{{ user.id }}" class="btn btn-info btn-lg w-100">
        Cancel
      </a>
      <button class="btn btn-primary btn-lg w-100">
        Edit
      </button>
    </form>
  </div>

{% endblock %}
